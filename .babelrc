{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ]
  ],
  "plugins": [
    [
      "babel-plugin-root-import",
      {
        "rootPathPrefix": "@",
        "rootPathSuffix": "src"
      }
    ],
    [
      "@babel/plugin-transform-modules-commonjs"
    ]
  ],
  "sourceMaps": "both",
  "highlightCode": true
}
